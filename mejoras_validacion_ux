      "source": [
        "import json\n",
        "\n",
        "# =========================\n",
        "# CARGAR / GUARDAR DATOS\n",
        "# =========================\n",
        "\n",
        "def cargar_tareas():\n",
        "    try:\n",
        "        with open(\"tareas.json\", \"r\") as archivo:\n",
        "            return json.load(archivo)\n",
        "    except:\n",
        "        return []\n",
        "\n",
        "def guardar_tareas(tareas):\n",
        "    with open(\"tareas.json\", \"w\") as archivo:\n",
        "        json.dump(tareas, archivo, indent=4)\n",
        "\n",
        "# =========================\n",
        "# UTILIDADES\n",
        "# =========================\n",
        "\n",
        "def pedir_numero(mensaje):\n",
        "    while True:\n",
        "        valor = input(mensaje)\n",
        "\n",
        "        if valor.isdigit():\n",
        "            return int(valor)\n",
        "        else:\n",
        "            print(\"‚ö†Ô∏è Introduce un n√∫mero v√°lido\")\n",
        "\n",
        "# =========================\n",
        "# FUNCIONES PRINCIPALES\n",
        "# =========================\n",
        "\n",
        "def a√±adir_tarea(tareas):\n",
        "    titulo = input(\"Nueva tarea: \").strip()\n",
        "\n",
        "    if titulo == \"\":\n",
        "        print(\"‚ö†Ô∏è La tarea no puede estar vac√≠a\")\n",
        "        return\n",
        "\n",
        "    tarea = {\n",
        "        \"titulo\": titulo,\n",
        "        \"completada\": False\n",
        "    }\n",
        "\n",
        "    tareas.append(tarea)\n",
        "    guardar_tareas(tareas)\n",
        "\n",
        "    print(\"‚úÖ Tarea a√±adida\")\n",
        "\n",
        "def mostrar_tareas(tareas):\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas.\")\n",
        "    else:\n",
        "        print(\"\\nüìã Lista de tareas:\")\n",
        "        for i, tarea in enumerate(tareas, start=1):\n",
        "            estado = \"‚úÖ\" if tarea[\"completada\"] else \"‚ùå\"\n",
        "            print(i, \"-\", tarea[\"titulo\"], estado)\n",
        "\n",
        "def completar_tarea(tareas):\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas.\")\n",
        "        return\n",
        "\n",
        "    mostrar_tareas(tareas)\n",
        "\n",
        "    numero = pedir_numero(\"N√∫mero de tarea: \")\n",
        "\n",
        "    if 1 <= numero <= len(tareas):\n",
        "        tareas[numero - 1][\"completada\"] = True\n",
        "        guardar_tareas(tareas)\n",
        "        print(\"‚úÖ Tarea completada\")\n",
        "    else:\n",
        "        print(\"N√∫mero fuera de rango\")\n",
        "\n",
        "def eliminar_tarea(tareas):\n",
        "    if not tareas:\n",
        "        print(\"No hay tareas para eliminar.\")\n",
        "        return\n",
        "\n",
        "    mostrar_tareas(tareas)\n",
        "\n",
        "    numero = pedir_numero(\"N√∫mero de tarea a eliminar: \")\n",
        "\n",
        "    if 1 <= numero <= len(tareas):\n",
        "        tarea = tareas.pop(numero - 1)\n",
        "        guardar_tareas(tareas)\n",
        "        print(\"üóëÔ∏è Eliminada:\", tarea[\"titulo\"])\n",
        "    else:\n",
        "        print(\"N√∫mero fuera de rango\")\n",
        "\n",
        "# =========================\n",
        "# MEN√ö\n",
        "# =========================\n",
        "\n",
        "def menu():\n",
        "    print(\"\\n===== GESTOR DE TAREAS =====\")\n",
        "    print(\"1. A√±adir tarea\")\n",
        "    print(\"2. Mostrar tareas\")\n",
        "    print(\"3. Completar tarea\")\n",
        "    print(\"4. Eliminar tarea\")\n",
        "    print(\"5. Salir\")\n",
        "\n",
        "# =========================\n",
        "# MAIN\n",
        "# =========================\n",
        "\n",
        "def main():\n",
        "    tareas = cargar_tareas()\n",
        "\n",
        "    while True:\n",
        "        menu()\n",
        "        opcion = input(\"Elige una opci√≥n: \")\n",
        "\n",
        "        if opcion == \"1\":\n",
        "            a√±adir_tarea(tareas)\n",
        "        elif opcion == \"2\":\n",
        "            mostrar_tareas(tareas)\n",
        "        elif opcion == \"3\":\n",
        "            completar_tarea(tareas)\n",
        "        elif opcion == \"4\":\n",
        "            eliminar_tarea(tareas)\n",
        "        elif opcion == \"5\":\n",
        "            print(\"üëã Hasta luego\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"‚ö†Ô∏è Opci√≥n inv√°lida\")\n",
        "\n",
        "# =========================\n",
        "# EJECUCI√ìN\n",
        "# =========================\n",
        "\n",
        "main()"
